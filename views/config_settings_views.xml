<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.hr.fleet</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="90"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='fleet']" position="inside">
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Traffic Infractions</span>
                                <div class="text-muted content-group mt16">
                                    <div>
                                        <label for="invoice_payment_term_id"/>
                                        <div class="text-muted">
                                            Default payment term for traffic infraction invoices
                                        </div>
                                    </div>
                                    <div>
                                        <field name="invoice_payment_term_id"/>            
                                    </div>
                                    <div>
                                        <label for="payment_journal_id"/>
                                        <div class="text-muted">
                                            Default journal for traffic infraction invoice payments
                                        </div>
                                    </div>
                                    <div>
                                        <field name="payment_journal_id"/>
                                    </div>
                                    <div>
                                        <label for="renach_api_url"/>
                                        <div class="text-muted">
                                            Endpont da API Renach
                                        </div>
                                    </div>
                                    <div>
                                        <field name="renach_api_url"/>
                                    </div>
                                    <div>
                                        <label for="renach_api_token"/>
                                        <div class="text-muted">
                                            Token da API Renach
                                        </div>
                                    </div>
                                    <div>
                                        <field name="renach_api_token"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
